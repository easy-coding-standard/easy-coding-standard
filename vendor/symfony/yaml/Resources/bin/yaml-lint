/**
 * Runs the Yaml lint command.
 *
 * @author Jan Sch√§dlich <jan.schaedlich@sensiolabs.de>
 */
use ConfigTransformer20210601\Symfony\Component\Console\Application;
use ConfigTransformer20210601\Symfony\Component\Yaml\Command\LintCommand;
function includeIfExists(string $file) : bool
{
    return \file_exists($file) && (include $file);
}
if (!\ConfigTransformer20210601\includeIfExists(__DIR__ . '/../../../../autoload.php') && !\ConfigTransformer20210601\includeIfExists(__DIR__ . '/../../vendor/autoload.php') && !\ConfigTransformer20210601\includeIfExists(__DIR__ . '/../../../../../../vendor/autoload.php')) {
    \fwrite(\STDERR, 'Install dependencies using Composer.' . \PHP_EOL);
    exit(1);
}
if (!\class_exists(\ConfigTransformer20210601\Symfony\Component\Console\Application::class)) {
    \fwrite(\STDERR, 'You need the "symfony/console" component in order to run the Yaml linter.' . \PHP_EOL);
    exit(1);
}
(new \ConfigTransformer20210601\Symfony\Component\Console\Application())->add($command = new \ConfigTransformer20210601\Symfony\Component\Yaml\Command\LintCommand())->getApplication()->setDefaultCommand($command->getName(), \true)->run();
